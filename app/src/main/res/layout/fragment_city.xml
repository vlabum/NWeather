<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_margin="15dp"
              android:theme="@style/AppTheme">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            card_view:cardCornerRadius="15dp"
            card_view:contentPadding="5dp"
            card_view:cardBackgroundColor="@color/colorPrimary"
            android:elevation="3dp"
            android:theme="@style/AppTheme">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/fragment_city_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryLight"
                    tools:text="Город"
                    android:textAppearance="?attr/textAppearanceListItem" android:layout_marginTop="8dp"
                    card_view:layout_constraintTop_toTopOf="parent" card_view:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
            />

            <TextView
                    android:id="@+id/fragment_city_temp"
                    android:textColor="@color/colorPrimaryLight"
                    android:layout_width="wrap_content"
                    tools:text="temp"
                    android:layout_height="wrap_content"
                    card_view:layout_constraintStart_toStartOf="@+id/fragment_city_name"
                    android:layout_marginTop="8dp" card_view:layout_constraintTop_toBottomOf="@+id/fragment_city_name"
                    android:layout_marginBottom="8dp" card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintVertical_bias="0.514"/>

            <TextView
                    android:id="@+id/fragment_city_descr"
                    android:textColor="@color/colorPrimaryLight"
                    android:layout_marginStart="28dp"
                    tools:text="descr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:layout_constraintStart_toEndOf="@+id/fragment_city_temp"
                    card_view:layout_constraintTop_toTopOf="@+id/fragment_city_temp"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
